<div class="row">
  <%= form_for user, remote: true, id: 'user_form' do |f| %>
    <div class="form-group col-md-10">
      <%= f.label :name %>
      <%= f.text_field :name, placeholder: 'Enter Name', class: 'form-control', required: true %>
      <%= f.label :email %>
      <%= f.email_field :email, placeholder: 'Enter Email', class: 'form-control', required: true %>
      <%= f.label :phone %>
      <%= f.phone_field :phone, placeholder: 'Enter Phone', class: 'form-control', required: true %>
      <%= f.label :title %>
      <%= f.text_field :title, placeholder: 'Enter Title', class: 'form-control' %>
      <%= f.label :status %>
      <%= select_tag :status, options_for_select(User.statuses), class: 'form-control' %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    </div>
    <div class="form-group col-md-2">
      <%= f.submit 'Submit', class: 'form-control btn btn-success', id: 'user_form_submit' %>
    </div>
  <% end %>
</div>
