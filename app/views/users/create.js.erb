<% if @user.persisted? %>
  $('#userFromModal').modal('toggle');
  $('#user-datatable').DataTable().draw();
  $.toast({
    text: 'user has been created successfully',
    icon: 'success',
    showHideTransition: 'fade',
    hideAfter: 6000,
    textAlign: 'left',
    position: 'top-right',
  });

  $('#userFromModal').on('hidden.bs.modal', function(){
    $(this).find('form')[0].reset();
  });
<% else %>
  $.toast({
    text: '<%= @user.errors.full_messages.to_sentence %>',
    icon: 'success',
    showHideTransition: 'fade',
    textAlign: 'left',
    position: 'top-right',
    hideAfter: 7000,
  });
<% end %>
