<% if @user.errors.empty? %>
  $('#userEditFromModal').modal('toggle');
  $('#user-datatable').DataTable().draw();
  $.toast({
    text: 'user has been updated successfully',
    icon: 'success',
    showHideTransition: 'fade',
    hideAfter: 5000,
    textAlign: 'left',
    position: 'top-right',
  });
<% else %>
  $.toast({
    text: '<%= @user.errors.full_messages.to_sentence %>',
    icon: 'error',
    showHideTransition: 'fade',
    hideAfter: 7000,
    textAlign: 'left',
    position: 'top-right',
  });
<% end %>
